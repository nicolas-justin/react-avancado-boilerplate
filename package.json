    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-styled-components": "^7.0.8",
    "lint-staged": "^12.3.5",
    "plop": "^3.0.5",
    "prettier": "^2.5.1",
    "react-is": "^17.0.2",
    "typescript": "^4.6.2"
  }
